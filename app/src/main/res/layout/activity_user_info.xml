<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/alen_toolbar_layout"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/text_white_color"
        app:cardElevation="1dp"
        android:layout_marginBottom="@dimen/frame_four_distance"
        android:layout_marginTop="@dimen/frame_four_distance">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/frame_eight_distance">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frame_text_normal_size"
                android:padding="@dimen/frame_eight_distance"
                android:textColor="@color/text_gray_color"
                android:text="@string/info_photo_hint"/>
            <allen.frame.widget.CircleImageView
                android:id="@+id/info_photo"
                android:layout_width="@dimen/frame_photo_small_icon_size"
                android:layout_height="@dimen/frame_photo_small_icon_size"
                app:border_width="0dp"
                app:border_color="@android:color/transparent"
                android:layout_marginEnd="@dimen/frame_eight_distance"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/text_white_color"
        app:cardElevation="1dp"
        android:layout_marginBottom="@dimen/frame_four_distance"
        android:layout_marginTop="@dimen/frame_four_distance">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/frame_eight_distance">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frame_text_normal_size"
                android:padding="@dimen/frame_eight_distance"
                android:textColor="@color/text_gray_color"
                android:text="@string/info_nick_hint"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/info_nick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frame_text_normal_size"
                android:gravity="end"
                android:padding="@dimen/frame_eight_distance"
                android:textColor="@color/text_gray_color"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/text_white_color"
        app:cardElevation="1dp"
        android:layout_marginBottom="@dimen/frame_four_distance"
        android:layout_marginTop="@dimen/frame_four_distance">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/frame_eight_distance">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frame_text_normal_size"
                android:padding="@dimen/frame_eight_distance"
                android:textColor="@color/text_gray_color"
                android:text="@string/info_phone_hint"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/info_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frame_text_normal_size"
                android:gravity="end"
                android:padding="@dimen/frame_eight_distance"
                android:textColor="@color/text_gray_color"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/text_white_color"
        app:cardElevation="1dp"
        android:layout_marginBottom="@dimen/frame_four_distance"
        android:layout_marginTop="@dimen/frame_four_distance">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/frame_eight_distance">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frame_text_normal_size"
                android:padding="@dimen/frame_eight_distance"
                android:textColor="@color/text_gray_color"
                android:text="@string/info_lasttime_hint"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/info_last_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frame_text_normal_size"
                android:gravity="end"
                android:padding="@dimen/frame_eight_distance"
                android:textColor="@color/text_gray_color"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/text_white_color"
        app:cardElevation="1dp"
        android:layout_marginBottom="@dimen/frame_four_distance"
        android:layout_marginTop="@dimen/frame_four_distance">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/frame_eight_distance">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frame_text_normal_size"
                android:padding="@dimen/frame_eight_distance"
                android:textColor="@color/text_gray_color"
                android:text="@string/info_registtime_hint"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/info_regist_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frame_text_normal_size"
                android:gravity="end"
                android:padding="@dimen/frame_eight_distance"
                android:textColor="@color/text_gray_color"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/text_white_color"
        app:cardElevation="1dp"
        android:layout_marginBottom="@dimen/frame_four_distance"
        android:layout_marginTop="@dimen/frame_four_distance"
        app:contentPadding="@dimen/frame_eight_distance">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/info_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/frame_text_normal_size"
            android:gravity="start|center_vertical"
            android:padding="@dimen/frame_eight_distance"
            android:textColor="@color/text_gray_color"
            android:drawableEnd="@drawable/ic_logo_55"
            android:text="@string/change_psw_label"/>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>