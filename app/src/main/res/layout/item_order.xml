<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/frame_four_distance"
        android:layout_margin="@dimen/frame_four_distance"
        app:cardElevation="1dp"
        app:contentPadding="@dimen/frame_four_distance">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="@dimen/frame_photo_big_size"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/yellow_fill_bg">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/order_item_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frame_text_small_size"
                android:textColor="@color/text_gray_color"
                android:textStyle="bold"
                android:padding="@dimen/frame_two_distance"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frame_text_smallst_size"
                android:textColor="@color/text_gray_color"
                android:padding="@dimen/frame_two_distance"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_item_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frame_text_smallst_size"
                android:textColor="@color/text_gray_color"
                android:padding="@dimen/frame_two_distance"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|start">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/order_item_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_yellow_color"
                    android:textSize="@dimen/frame_text_smallst_size"
                    android:padding="@dimen/frame_four_distance"
                    android:drawableStart="@mipmap/ic_logo_50_s"
                    android:gravity="center"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/order_item_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_yellow_color"
                    android:textSize="@dimen/frame_text_smallst_size"
                    android:padding="@dimen/frame_four_distance"
                    android:drawableStart="@mipmap/ic_logo_51_s"
                    android:gravity="center"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/order_item_diamond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_yellow_color"
                    android:textSize="@dimen/frame_text_smallst_size"
                    android:padding="@dimen/frame_four_distance"
                    android:drawableStart="@mipmap/ic_logo_52_s"
                    android:gravity="center"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order_item_redeem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frame_text_small_size"
                android:textColor="@color/text_yellow_color"
                android:gravity="center"
                android:text="@string/shop_redeem_hint"
                android:padding="@dimen/frame_four_distance"
                android:textStyle="bold"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>