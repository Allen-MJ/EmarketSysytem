<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC363636"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:theme="@style/fulltrans">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2B363636"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/frame_eight_distance">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2B363636"
            android:orientation="horizontal"
            android:paddingTop="@dimen/frame_eight_distance"
            android:paddingBottom="@dimen/frame_eight_distance"
            android:visibility="visible"
            android:gravity="start|center_vertical">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/back" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:text="分享"
                android:gravity="center"
                android:textSize="@dimen/frame_text_normal_size"
                android:padding="@dimen/frame_eight_distance"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <allen.frame.widget.PhotoView
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/frame_edge_distance"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>