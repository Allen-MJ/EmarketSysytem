<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/text_white_color"
        app:cardElevation="1dp"
        android:layout_margin="@dimen/frame_eight_distance"
        app:cardCornerRadius="@dimen/frame_four_distance">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/address_item_setinit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/frame_text_small_size"
                    android:textColor="@color/text_white_color"
                    android:text="@string/init_hint"
                    android:background="@drawable/red_init_bg"
                    android:paddingTop="@dimen/frame_four_distance"
                    android:paddingStart="@dimen/frame_four_distance"
                    android:paddingEnd="@dimen/frame_edge_distance"
                    android:paddingBottom="@dimen/frame_four_distance"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/address_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/frame_text_normal_size"
                    android:textColor="@color/text_gray_color"
                    android:padding="@dimen/frame_four_distance"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/address_item_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/frame_text_normal_size"
                    android:textColor="@color/text_gray_color"
                    android:padding="@dimen/frame_four_distance"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/address_item_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/frame_text_small_size"
                android:textColor="@color/text_gray_color"
                android:paddingStart="@dimen/frame_four_distance"
                android:paddingBottom="@dimen/frame_four_distance"
                android:paddingEnd="@dimen/frame_four_distance"
                android:lineSpacingMultiplier="1.5"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_line_color"
                android:layout_marginStart="@dimen/frame_four_distance"
                android:layout_marginEnd="@dimen/frame_four_distance"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|end">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/address_item_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delete_bt_hint"
                    android:textColor="@color/text_gray_color"
                    android:textSize="@dimen/frame_text_smaller_size"
                    android:padding="@dimen/frame_edge_distance"
                    android:drawablePadding="@dimen/frame_four_distance"
                    android:drawableStart="@mipmap/ic_logo_47"
                    android:gravity="center"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/address_item_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_bt_hint"
                    android:textColor="@color/text_gray_color"
                    android:textSize="@dimen/frame_text_smaller_size"
                    android:padding="@dimen/frame_edge_distance"
                    android:drawablePadding="@dimen/frame_four_distance"
                    android:drawableStart="@mipmap/ic_logo_48"
                    android:gravity="center"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/address_item_init"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/init_bt_hint"
                    android:textColor="@color/text_gray_color"
                    android:textSize="@dimen/frame_text_smaller_size"
                    android:padding="@dimen/frame_edge_distance"
                    android:drawablePadding="@dimen/frame_four_distance"
                    android:drawableStart="@mipmap/ic_logo_49"
                    android:gravity="center"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>