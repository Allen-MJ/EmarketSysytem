<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/frame_four_distance"
        android:layout_margin="@dimen/frame_eight_distance"
        app:cardElevation="1dp"
        app:contentPadding="@dimen/frame_four_distance">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/frame_photo_big_size"
                android:layout_height="@dimen/frame_photo_big_size"
                app:cardBackgroundColor="@color/text_yellow_color"
                app:cardCornerRadius="@dimen/frame_four_distance">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/task_item_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"/>
            </androidx.cardview.widget.CardView>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/task_item_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:lines="4"
                android:gravity="start|top"
                android:padding="@dimen/frame_four_distance"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/frame_text_small_size"
                android:lineSpacingMultiplier="1.2"
                android:ellipsize="end"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/frame_four_distance">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/task_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/frame_text_small_size"
                    android:padding="@dimen/frame_four_distance"
                    android:textColor="@color/text_yellow_color"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/task_item_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/frame_text_small_size"
                    android:padding="@dimen/frame_four_distance"
                    android:textColor="@color/text_yellow_color"
                    android:background="@drawable/yellow_boder_bg"
                    android:layout_margin="@dimen/frame_four_distance"
                    android:text="@string/get_task_hint"
                    android:textStyle="bold"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>