<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/frame_four_distance"
        android:layout_marginTop="@dimen/frame_four_distance"
        android:layout_marginBottom="@dimen/frame_four_distance"
        android:layout_marginStart="@dimen/frame_eight_distance"
        android:layout_marginEnd="@dimen/frame_eight_distance"
        app:cardElevation="1dp">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/frame_eight_distance">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/notice_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/frame_text_small_size"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/notice_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/frame_text_smaller_size"
                android:layout_marginTop="@dimen/frame_four_distance"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:ellipsize="end"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/notice_item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/frame_text_smaller_size"
                android:layout_marginTop="@dimen/frame_four_distance"
                android:singleLine="true"
                android:gravity="end"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>