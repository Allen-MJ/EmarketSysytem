<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/frame_four_distance"
        android:layout_marginStart="@dimen/frame_eight_distance"
        android:layout_marginEnd="@dimen/frame_eight_distance"
        android:layout_marginTop="@dimen/frame_four_distance"
        android:layout_marginBottom="@dimen/frame_four_distance"
        app:cardElevation="1dp"
        app:contentPadding="@dimen/frame_four_distance">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <androidx.cardview.widget.CardView
                android:id="@+id/record_item_icon_layout"
                android:layout_width="@dimen/frame_photo_icon_big_size"
                android:layout_height="@dimen/frame_photo_big_size"
                app:cardBackgroundColor="@color/text_yellow_color"
                app:cardCornerRadius="@dimen/frame_four_distance">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/record_item_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"/>
            </androidx.cardview.widget.CardView>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/frame_four_distance">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/record_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_color"
                    android:textSize="@dimen/frame_text_small_size"
                    android:lineSpacingMultiplier="1.2"
                    android:lines="2"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/frame_four_distance">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/record_item_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/frame_text_small_size"
                        android:textColor="@color/text_gray_color"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/record_item_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/frame_text_smaller_size"
                        android:padding="@dimen/frame_four_distance"
                        android:textColor="@color/text_yellow_color"
                        android:text="@string/delete_bt_hint"
                        android:drawablePadding="@dimen/frame_four_distance"
                        android:background="@drawable/yellow_boder_bg"
                        android:drawableStart="@mipmap/ic_logo_45"/>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>